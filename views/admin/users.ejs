<% layout('layouts/boilerplate') %>
<h1 class="text-center mt-4"><strong>All Users</strong></h1>
<div class="table-responsive">
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>User ID</th>
        <th>Username</th>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
      <tr>
        <td><%= user._id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <a
            href="/admin/users/<%= user._id %>"
            class="btn btn-info btn-sm"
            >View Details</a
          >
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
